@import '~src/styles/form.styl'
@import '~src/styles/auth-form.styl'
@import '~src/styles/buttons-area.styl'

.profile-container
    display flex
    padding 5em 0
    flex-wrap wrap
    .user-info
        display flex
        flex-grow 1
    .additional-info
        display flex
        flex-grow 1

.user-image-container
    margin 1em 0

    .image-container
        text-align center
        margin 1em
        img
            min-width 200px
            max-width 500px
            max-height 200px

    .buttons-container
        margin-top 0
        button
            width 100%
        .upload-image
            position relative
            input[type=file]
                position absolute
                left 0
                top 0
                width 100%
                height 100%
                opacity 0
                cursor pointer

.user-info
    form
        width 80%

.additional-info
    display flex
    flex-direction column

    .specialized-info
        display flex
        margin 2em 0

    .reset-password-container
        display flex
        margin 2em 0

app-clinic-profile,
app-clinician-profile,
app-patient-profile,
app-reset-password
    width 100%
